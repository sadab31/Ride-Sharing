  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/js/bootstrap.bundle.min.js" integrity="sha512-6+y8M6jg0pU7sO+G0pYRHlFW44y83XKjG+2OgbheawICBdiwTjML27ZvBm+6utPUYy+JJMijBjre+1blQkGqbA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
